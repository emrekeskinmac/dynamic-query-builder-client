{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": false,
    "pretty": true,
    "removeComments": true,
    "lib": ["es6", "esnext.asynciterable"],
    "typeRoots": ["node_modules/@types"],
    "types": ["@types/node", "@types/jest"],
    "rootDir": "src",
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "dist",
    "./__tests__"
  ]
}
